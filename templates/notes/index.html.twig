{% extends 'base.ecole.html.twig' %}

{% block title %}Liste des notes{% endblock %}

{% block body %}
<div class="row ">
    <div class="card">
        
        <div class="card-body">

            {% if notes %}
            <h4 class="card-title">Liste des notes</h4>
           <div class="table-responsive">
           
            <table class="table">
                <thead>
                    <tr>
                        <th>MTRICULE</th>
                        <th>ELEVE</th>
                        <th>MATIERE</th>
                        <th>NOTE</th> 
                        <th>Actions</th>
                        
                    </tr>
                </thead>
                
            
                <tbody>
                    {% for note in notes %}
                    <tr>
                        <td>{{note.eleve.matricule}}</td>
                        <td>{{note.eleve}}</td>
                            <td>{{note.matiere}}</td>
                        <td>{{note.note}}</td>                     
                        <td>
                            
                             <button type="button" class=" btn-link btn btn-primary   mr-2"><a href="{{path("edit_note",{"id":note.id})}}" class="text-light ">Editer</a></button>
                            <button type="button" class="btn btn-warning   mr-2"><a href="{{path("del_note",{"id":note.id})}}" class="text-light ">Supp</a></button> 
                        </td>
                        
                        
                    </tr>
                    {% endfor %}
                  
                
                </tbody>
            </table>
           </div>
             
            {% else %}
            <h4>Aucune note</h4>
            {% endif %}
              
        </div>
    </div>
</div>

{% endblock %}
