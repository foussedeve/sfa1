
{% extends 'base.ecole.html.twig' %}

{% block title %}Ajouter un nouveau éleve{% endblock %}

{% block body %}
<div class="row">
    <div class="card">

        <div class="card-body">
            <h4 class="">Ajouter un nouveau parent</h4>
            {{form_start(form)}}
            <div class="form-group">
                {{form_row(form.photoFile,{"attr":{"placeholder":"","class":"form-control"},"label":"Photo de l'éleve:"})}}
            </div>
            <div class="form-group">
                {{form_row(form.nom,{"attr":{"placeholder":"","class":"form-control"},"label":"Nom:"})}}
            </div>
            <div class="form-group">
                {{form_row(form.prenom,{"attr":{"placeholder":" ","class":"form-control"},"label":"Prénom:"})}}
            </div>
            <div class="form-group">
                {{form_row(form.matricule,{"attr":{"placeholder":" ","class":"form-control"},"label":"Matricule:"})}}
            </div>
        
        <div class="form-group">
            {{form_row(form.parent,{"attr":{"class":"form-control text-dark"},"label":"Parents:"})}}
        </div>

        <div class="form-group">
            {{form_row(form.classe,{"attr":{"class":"form-control text-dark"},"label":"Classes:"})}}
        </div> 
    
    

    <button type="submit" class="btn btn-primary bg-info  mr-2">Ajouter </button>
    <button type="reset" class="btn btn-light">Cancel</button>
    {{form_end(form)}}
</div>

</div>
</div>
{% endblock %}