{% extends 'base.html.twig' %}

{% block title %}Login - Se connecter{% endblock %}

{% block body %}
   {% if error %}
        <div class=" text-center mx-auto mt-4 w-50 fixed-top alert alert-danger  alert-dismissible fade show" role="alert">
         <strong> {{ error.messageKey|trans(error.messageData, 'security') }} </strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}  
<section class="vh-100 ">
  <div class="container-fluid">
    <div class="row ">
      <div class="col-sm-5 mt-4 text-black ms-sm-5 ">

        <div class="px-5 ms-xl-4">
          <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
          <span class=" mb-0"><img src="{{asset("assets/logo/logo-syschool1.jpg")}}" width="70" height="65" alt="" ></span>
        </div>

        <div class="d-flex align-items-center  h-75 px-5 ms-xl-4 mt-2 pt-5 pt-xl-0 mt-xl-3">

          <form style="width: 23rem;" method="post">

            <h3 class="fw-normal mb-2 pb-1 text-info" >Connexion</h3>

            <div class="form-outline mb-3">
              <input type="email" id="email" name="email" class="form-control form-control-md mb-3" value="{{ last_username }}" />
              <label class="form-label fw-bold" for="email">Email</label>
            </div>

            <div class="form-outline mb-4">
              <input type="password" id="password"  name="password" class="form-control form-control-md mb-3" />
              <label class="form-label fw-bold" for="password">Mot de passe</label>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="pt-1 mb-4">
              <button class="btn btn-info btn-lg btn-block" type="submit">Se connecter</button>
            </div>

            <p class="small mb-5 pb-lg-2"><a class="text-muted" href="#!">Mot de passe oubli√©?</a></p>
            

          </form>

        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
    
        <img src="{{asset("assets/images/login.jpg")}}"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section> 
{% endblock %}
